<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/theme_bg_color_black">

    <RelativeLayout
        android:id="@+id/dandu_leftmenu_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:paddingTop="1dp">


        <ImageView
            android:id="@+id/dandu_leftmenu_right_slide_close"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/setting"/>

        <ImageView
            android:id="@+id/dandu_leftmenu_login"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_centerHorizontal="true"
            android:background="@drawable/avater_default"/>

        <ImageView
            android:id="@+id/dandu_leftmenu_search"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/search_white"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/dandu_leftmenu_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dandu_leftmenu_title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/weread_horizontal"/>

    <RelativeLayout
        android:id="@+id/dandu_leftmenu_title_logo_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dandu_leftmenu_logo_iv"
        android:layout_marginTop="38.0dip">

        <View
            android:layout_width="91.0dip"
            android:layout_height="0.5dip"
            android:layout_centerVertical="true"
            android:background="#ff676767"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/weread_signature"/>

        <View
            android:layout_width="91.0dip"
            android:layout_height="0.5dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#ff676767"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dandu_leftmenu_column_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dandu_leftmenu_title_logo_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dandu_leftmenu_home_page_tv"
            style="@style/MenuColunmStyle"
            android:text="首   页"/>

        <TextView
            android:id="@+id/dandu_leftmenu_words_tv"
            style="@style/MenuColunmStyle"
            android:layout_marginTop="10dp"
            android:text="文   字"/>

        <TextView
            android:id="@+id/dandu_leftmenu_voice_tv"
            style="@style/MenuColunmStyle"
            android:layout_marginTop="10dp"
            android:text="声   音"/>

        <TextView
            android:id="@+id/dandu_leftmenu_video_tv"
            style="@style/MenuColunmStyle"
            android:layout_marginTop="10dp"
            android:text="影   像"/>

        <TextView
            android:id="@+id/dandu_leftmenu_calendar_tv"
            style="@style/MenuColunmStyle"
            android:layout_marginTop="10dp"
            android:text="单向历"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dandu_leftmenu_title_logo_r2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dandu_leftmenu_column_ll"
        android:layout_marginTop="10dip">

        <View
            android:layout_width="91.0dip"
            android:layout_height="0.5dip"
            android:layout_centerVertical="true"
            android:background="#ff676767"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/weread_signature"/>

        <View
            android:layout_width="91.0dip"
            android:layout_height="0.5dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#ff676767"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dandu_leftmenu_title_logo_r2"
        android:layout_marginTop="20dp"
        android:paddingLeft="35dp"
        android:paddingRight="5dp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/dandu_leftmenu_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/MenuColunmStyle"
                android:ems="1"
                android:text="消息"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dandu_leftmenu_coll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/MenuColunmStyle"
                android:ems="1"
                android:text="收藏"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dandu_leftmenu_noline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/MenuColunmStyle"
                android:ems="1"
                android:text="离线"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dandu_leftmenu_neta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/MenuColunmStyle"
                android:ems="1"
                android:text="笔记"
                />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
